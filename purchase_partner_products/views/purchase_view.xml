<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="purchase_order_form_inherit">
            <field name="name">purchase_order_form_inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="after">
                    <field name="partner_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('purchase_ok', '=', True), ('seller_ids.name', '=', 'order_id.partner_id')]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
