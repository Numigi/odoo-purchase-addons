<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_form_with_product_domain" model="ir.ui.view">
        <field name="name">Purchase Order: add domain to constrain products of the supplier</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="commercial_partner_id" invisible="1"/>
            </field>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_commercial_partner_id': commercial_partner_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="before">
                <field name="commercial_partner_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                <attribute name="domain">[
                    ('purchase_ok', '=', True),
                    ('seller_ids.name.commercial_partner_id', '=', commercial_partner_id),
                ]</attribute>
            </xpath>
        </field>
    </record>

</odoo>
