<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <!--  REQUESTS FOR QUOTATION  -->
    <record
    id="view_quotation_request_partner_highest_parent_tree"
    model="ir.ui.view"
  >
        <field name="name">quotation.request.partner.highest.parent.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
        <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="partner_highest_parent_id" optional="show" />
                </field>
        </field>
    </record>

    <!--  PURCHASE ORDER -->
    <record
    id="view_purchase_order_partner_highest_parent_tree"
    model="ir.ui.view"
  >
        <field name="name">purchase.order.partner.highest.parent.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree" />
        <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="partner_highest_parent_id" optional="show" />
                </field>
        </field>
    </record>

</odoo>
