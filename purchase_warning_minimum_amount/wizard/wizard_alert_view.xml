<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="wizard_alert_message" model="ir.ui.view">
            <field name="">wizard_alert_message</field>
            <field name="model">wizard.alert</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Warning" version="7.0">
                    <p>
                        The minimum order amount for the selected supplier is not reached<br/>
                        Would you like to confirm your order anyway?<br/>
                        Click OK to Confirm the order or Cancel to add other products.
                    </p>
                    <footer>
                        <button name="apply" string="OK" type="object" class="oe_highlight"/>
                        <button special="cancel" string="CANCEL"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>